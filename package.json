{
  "name": "@ansvar/german-law-mcp",
  "version": "0.2.0",
  "mcpName": "eu.ansvar/german-law-mcp",
  "description": "German legal research MCP server with statutes, case law, and preparatory works from gesetze-im-internet.de",
  "type": "module",
  "main": "dist/src/index.js",
  "bin": {
    "german-law-mcp": "dist/src/index.js"
  },
  "files": [
    "dist",
    "server.json"
  ],
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ansvar-Systems/German-law-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Ansvar-Systems/German-law-mcp/issues"
  },
  "homepage": "https://github.com/Ansvar-Systems/German-law-mcp#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "claude",
    "german-law",
    "germany",
    "legal",
    "compliance",
    "gesetze",
    "ansvar"
  ],
  "author": "Ansvar Systems AB <hello@ansvar.ai>",
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/index.ts",
    "start": "node dist/src/index.js",
    "scaffold:country": "npm run build && node dist/scripts/scaffold-country.js",
    "ingest": "python3 scripts/ingest_gesetze_im_internet.py",
    "ingest:dry-run": "python3 scripts/ingest_gesetze_im_internet.py --dry-run",
    "ingest:missing": "python3 scripts/ingest_gesetze_im_internet.py --only-missing",
    "ingest:missing:dry-run": "python3 scripts/ingest_gesetze_im_internet.py --only-missing --dry-run",
    "ingest:cases": "python3 scripts/ingest_rechtsprechung_im_internet.py",
    "ingest:cases:dry-run": "python3 scripts/ingest_rechtsprechung_im_internet.py --dry-run",
    "ingest:cases:missing": "python3 scripts/ingest_rechtsprechung_im_internet.py --only-missing",
    "ingest:prep": "python3 scripts/ingest_dip_bundestag.py",
    "ingest:prep:dry-run": "python3 scripts/ingest_dip_bundestag.py --dry-run",
    "ingest:prep:missing": "python3 scripts/ingest_dip_bundestag.py --only-missing",
    "ingest:all:missing": "npm run ingest:missing && npm run ingest:cases:missing && npm run ingest:prep:missing",
    "auto-update": "python3 scripts/auto_update_german_law.py --quiet",
    "auto-update:dry-run": "python3 scripts/auto_update_german_law.py --dry-run --quiet",
    "auto-update:daemon": "python3 scripts/auto_update_german_law.py --loop-minutes 30 --quiet",
    "write:metadata": "tsx scripts/write-db-metadata.ts",
    "build:db:paid": "tsx scripts/build-db-paid.ts",
    "test": "npm run build && node --test dist/test/**/*.test.js",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "validate": "npm run typecheck && npm test"
  },
  "devDependencies": {
    "@types/node": "^22.13.4",
    "@vercel/node": "^5.6.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@ansvar/mcp-sqlite": "^1.0.3",
    "@modelcontextprotocol/sdk": "^1.26.0"
  }
}
